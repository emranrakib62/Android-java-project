<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/inputElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter element"
        android:inputType="text" />


    <Button
        android:id="@+id/buttonPush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Push" />

    <Button
        android:id="@+id/buttonPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pop" />

    <Button
        android:id="@+id/buttonPeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peek" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Stack" />


    <TextView
        android:id="@+id/stackStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stack is empty"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp" />


    <ListView
        android:id="@+id/stackListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
